<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dronelist_vertical_padding"
    android:paddingBottom="@dimen/dronelist_vertical_padding"
    android:paddingLeft="@dimen/dronelist_horizontal_padding"
    android:paddingRight="@dimen/dronelist_horizontal_padding">

    <TextView
        android:id="@+id/dronelist_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dronelist_main_text_size"
        tools:text="Xinyu_Drone" />

    <TextView
        android:id="@+id/dronelist_item_ip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dronelist_sub_text_size"
        android:layout_marginTop="@dimen/dronelist_text_gap"
        tools:text="192.168.191.1"/>

</LinearLayout>